# Terraform Variables Example
# Copy this file to terraform.tfvars and update with your actual values
# DO NOT COMMIT terraform.tfvars - it contains sensitive data!

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

# Database Configuration
db_instance_class = "db.t3.micro"
db_name = "vector_db"
db_username = "postgres"
db_password = "CHANGE_THIS_TO_SECURE_PASSWORD"  # Use a strong password!

# Redis Configuration
redis_node_type = "cache.t3.micro"

# Bastion Host Configuration
bastion_ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQD... [YOUR PUBLIC KEY HERE]"
bastion_allowed_ssh_cidr_blocks = ["YOUR.IP.ADDRESS.HERE/32"]  # Your public IP only!
bastion_instance_type = "t3.micro"

# SendGrid Configuration (Optional - for email service)
sendgrid_api_key = ""  # Leave empty, use GitHub Secrets instead
sendgrid_from_email = ""
sendgrid_from_name = "Vector"
