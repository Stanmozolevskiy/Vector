# Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# DO NOT COMMIT terraform.tfvars to Git!

aws_region        = "us-east-1"
environment       = "dev"
vpc_cidr          = "10.0.0.0/16"
db_instance_class = "db.t3.micro"
redis_node_type   = "cache.t3.micro"
db_name           = "vector_db"
db_username       = "postgres"
# IMPORTANT: Use single quotes in PowerShell to prevent variable expansion
# Example: db_password = '$Memic1234'
# Or escape with backtick: db_password = '`$Memic1234'
db_password       = "$Memic1234"
